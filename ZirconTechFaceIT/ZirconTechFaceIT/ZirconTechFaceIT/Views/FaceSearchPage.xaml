<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZirconTechFaceIT.Views.FaceSearchPage"
              BackgroundColor="Azure"
             Title="Face Search">

    <ScrollView>
        <StackLayout Padding="5,20,5,0">


            <Button Text="UploadPhoto" Clicked="Button_UploadPhoto"/>

            <Button Text="Galary" Clicked="Button_Galary" />

            <Image x:Name="MainImage"
                 WidthRequest="400"
                 HeightRequest="220"/>

            <Label x:Name="PathLabel" />


            <Button Text="Set Picture" Clicked="Button_Picture"  />

            <Button Text="Search" Clicked="Button_Next" />

        </StackLayout>
    </ScrollView>
</ContentPage>